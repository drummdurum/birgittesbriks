generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            Int       @id @default(autoincrement())
  navn          String    @db.VarChar(100)
  efternavn     String    @db.VarChar(100)
  email         String?   @db.VarChar(255)
  telefon       String    @db.VarChar(20)
  created_at    DateTime  @default(now())
  updated_at    DateTime  @updatedAt
  bookings      Booking[]

  @@map("users")
  @@index([telefon])
  @@index([navn])
  @@unique([email, telefon])
}

model Booking {
  id                Int       @id @default(autoincrement())
  navn              String    @db.VarChar(100)
  email             String?   @db.VarChar(255)
  telefon           String    @db.VarChar(20)
  ønsket_dato       DateTime? @db.Date
  ønsket_tid        String?   @db.VarChar(20)
  behandling        String    @default("Kropsterapi") @db.VarChar(50)
  betaling          String    @default("Enkelt behandling") @db.VarChar(100)
  besked            String?
  status            String    @default("pending") @db.VarChar(20)
  completed         Boolean   @default(false)
  gdpr_samtykke     Boolean   @default(false)
  created_by_admin  Boolean   @default(false)
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt
  userId            Int?
  user              User?     @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@map("bookings")
  @@index([status])
  @@index([created_at])
  @@index([email])
  @@index([ønsket_dato, ønsket_tid])
  @@index([userId])
}

model BlockedDate {
  id         Int       @id @default(autoincrement())
  start_date DateTime  @db.Date
  end_date   DateTime? @db.Date
  reason     String?
  created_at DateTime  @default(now())

  @@map("blocked_dates")
  @@index([start_date, end_date])
}

model BlockedTime {
  id         Int      @id @default(autoincrement())
  date       DateTime @db.Date
  time       String   @db.VarChar(20)
  reason     String?
  created_at DateTime @default(now())

  @@map("blocked_times")
  @@index([date, time])
  @@unique([date, time])
}

model Session {
  sid    String   @id
  sess   Json
  expire DateTime

  @@map("session")
}
