{
  "name": "birgittesbriks-website",
  "version": "1.0.0",
  "description": "Website for Birgittes Briks - Danish body therapy and physiotherapy clinic",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build-css": "tailwindcss -i ./src/input.css -o ./public/css/style.css",
    "watch-css": "tailwindcss -i ./src/input.css -o ./public/css/style.css --watch",
    "build": "npm run build-css && node server.js",
    "railway-build": "npm run build-css",
    "db:init": "node -e \"require('./database/init').initDatabase()\""
  },
  "keywords": [
    "physiotherapy",
    "body-therapy",
    "healthcare",
    "denmark"
  ],
  "author": "Birgittes Briks",
  "license": "ISC",
  "dependencies": {
    "autoprefixer": "^10.4.21",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.9",
    "path": "^0.12.7",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
