{
  "name": "birgittesbriks-website",
  "version": "1.0.0",
  "description": "Website for Birgittes Briks - Danish body therapy and physiotherapy clinic",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build-css": "node -e \"console.log('CSS is pre-built')\"",
    "watch-css": "npx tailwindcss -i ./src/input.css -o ./public/css/style.css --watch",
    "build": "node -e \"console.log('Build complete')\"",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:positive": "jest bookings.positive.test.js",
    "test:negative": "jest bookings.negative.test.js",
    "test:all": "jest --detectOpenHandles --forceExit --verbose",
    "email:test": "node scripts/send-test-email.js",
    "test:email": "RUN_EMAIL_TEST=true jest __tests__/resend.test.js --runInBand"
  },
  "keywords": [
    "physiotherapy",
    "body-therapy",
    "healthcare",
    "denmark"
  ],
  "author": "Birgittes Briks",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "autoprefixer": "^10.4.21",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.9",
    "path": "^0.12.7",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "prisma": "^6.19.2",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.0.1",
    "supertest": "^7.2.2"
  }
}
