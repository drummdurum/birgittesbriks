{
  "name": "birgittesbriks-website",
  "version": "1.0.0",
  "description": "Website for Birgittes Briks - Danish body therapy and physiotherapy clinic",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build-css": "node -e \"console.log('CSS is pre-built')\"",
    "watch-css": "npx tailwindcss -i ./src/input.css -o ./public/css/style.css --watch",
    "build": "node -e \"console.log('Build complete')\"",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:generate": "prisma generate",
    "test:db:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:db:down": "docker-compose -f docker-compose.test.yml down",
    "test:db:setup": "set DATABASE_URL=postgresql://testuser:testpass@localhost:5433/birgittesbriks_test && npx prisma db push --skip-generate",
    "test:api": "node tests/api-test.js",
    "test": "npm run test:db:up && npm run test:db:setup && npm run test:api"
  },
  "keywords": [
    "physiotherapy",
    "body-therapy",
    "healthcare",
    "denmark"
  ],
  "author": "Birgittes Briks",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^6.19.2",
    "autoprefixer": "^10.4.21",
    "bcrypt": "^6.0.0",
    "connect-pg-simple": "^10.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-session": "^1.18.2",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.9",
    "path": "^0.12.7",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "prisma": "^6.19.2",
    "tailwindcss": "^4.1.14"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}
