# Example environment variables for Railway deployment
# Copy this file and set the actual values

# Database (Railway will automatically set DATABASE_URL)
DATABASE_URL=postgresql://username:password@host:port/database

# Application
NODE_ENV=production
PORT=3000
SESSION_SECRET=your_super_secret_session_key_minimum_32_characters

